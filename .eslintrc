{
   "env": {
      "es6": true,
      "node": true
   },

   "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
   },

   "rules": {
      "no-unused-vars": "warn",
      "no-undef": "error",
      "indent": ["error", 3],
      "quotes": ["warn", "single"],
      "semi": ["warn", "never"]
   }
}
